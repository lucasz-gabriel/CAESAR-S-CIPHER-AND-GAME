import random
for i in range(3):
    suajogada = int(input("What will you do? 0-Rock, 1-Paper, 2-Scissors"))
    jogadaadv = random.randint(0,2)
    if suajogada>2 or suajogada<0:
        print("Jogada invalida")
    else:
        print (f'O adversario escolheu {jogadaadv}')
        if suajogada == jogadaadv:
            print("Empate")
        else:
            if(
                (suajogada == 0 and jogadaadv ==2) or
                (suajogada == 1 and jogadaadv == 0) or
                (suajogada == 2 and jogadaadv ==1) 
            ):
                print("You won")
            else:
                print("You lost")

